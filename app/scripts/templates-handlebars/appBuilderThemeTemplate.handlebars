{{#if loading}}
    <h1>Loading...</h1>
{{else}}
    <!-- represents application screen APP PUBLISH DESTINATION -->
    <div id="appBuilderThemePicker" role="window">
        <!-- title bar region -->
        <section role="region" data-type="header">
            <header>
                <button id="back"><span class="icon icon-back">back</span></button>
                <menu type="toolbar">
                    <button id="themeFormDone">Done</button>
                </menu>
                <h1>Choose Theme</h1>
            </header>
        </section>
        <!-- content region -->
        <section role="region" data-type="content">
            <section role="region" data-type="detail" class="template-detail box-padded-small">
                <h1>Personalize your colors.</h1>
                <div class="light-bg round-corners box-padded-super-thin">
                <h2>THEMES</h2>
                {{#themeSelectHelper themes selectedTheme}}
                    {{this}}
                {{/themeSelectHelper}}
                </div>
            </section>
        </section>
    </div>
{{/if}}