{{#if loading}}
    <h1>Loading...</h1>
{{else}}
    <!-- represents application template screen, prefixed appTmpl
    APPLICATION PRODUCT DETAIL with PREVIEW -->
    <div id="appViewProductDetail" role="window" class="{{theme}}">
        {{#if dontShowBackButton}}
        {{else}}
            <section role="region" data-type="outer-chrome" class="outer-chrome">
                <button id="exitPreview">Exit Preview</button>
            </section>
        {{/if}}
        <!-- title bar region -->
        <section role="region" data-type="header">
            <header>
                <button id="back"><span class="icon icon-back">back</span></button>
                <menu type="toolbar">
                  <button><span class="icon icon-cart">cart</span></button>
                </menu>
                <h1>{{this.model.name}}}</h1>
            </header>
        </section>

        <!-- content region -->
        <section role="region" data-type="content">
            <section role="region" data-type="detail" class="fade template-detail">
            {{#if_eq product.attributes.imgStorageType compare="devicestorage"}}
                <div id="img-container-{{{product.attributes.id}}"></div>
            {{else}}
                <img src="{{product.attributes.imgLargePath}}" class="img-detail"/>
            {{/if_eq}}
            </section>
            <footer>
            <h2>
                <span>{{product.attributes.name}}</span>
                <button class="buy">Add to cart</button>
            </h2>
            <h2>{{product.attributes.price}}</h2>
            <p>{{product.attributes.description}}</p>
            </footer>
        </section>

        <!-- footer region -->
        <section role="region" data-type="footer">
            <footer></footer>
        </section>
    </div>

{{/if}}