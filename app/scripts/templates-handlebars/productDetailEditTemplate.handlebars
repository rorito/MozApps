{{#if loading}}
    <h1>Loading...</h1>
{{else}}
    <!-- represents application screen PRODUCT DETAIL EDIT -->
    <div id="productDetailEdit" role="window">

        <!-- title bar region -->
        <section role="region" data-type="header">
            <header>
                <button id="back"><span class="icon icon-back">back</span></button>
                <menu type="toolbar">
                    <!-- TODO: skin this button properly -->
                    <button id="productDetailEditDone">Done</button>
                </menu>
            {{#if name}}
                <h1>{{name}}</h1>
            {{else}}
                <h1>Add Details</h1>
            {{/if}}
            </header>
        </section>

        <!-- content region -->
        <section role="region" data-type="content">
            <section role="region" data-type="detail" class="template-detail box-padded-small">
                <div class="box-left-padded">
            {{#if_eq imgStorageType compare="package"}}
                <p class="box-unpadded"><img src="{{imgSmallPath}}"></p>
            {{else}}
                {{#if add}}
                <a href="#apps/{{appID}}/cameraGallery">
                    <p class="box-unpadded" id="productDetailImage"></p>
                </a>
                {{else}}
                <a href="#apps/{{appID}}/cameraGallery/{{id}}">
                    <p class="box-unpadded" id="productDetailImage"></p>
                </a>
                {{/if}}                            
            {{/if_eq}}
                </div>
                <div class="grey-box">
                    <p class="box-unpadded">
                        <label class="label-padded label-upper">Item Name</label>
                        <input id="name" name="name" type="text" value="{{name}}}" />
                    </p>
                    <p class="box-unpadded">
                        <label class="label-padded label-upper">Description</label>
                        <textarea id="description" name="description">{{description}}</textarea>
                    </p>
                    <p class="box-unpadded">
                        <label class="label-padded label-upper">Price</label>
                        <input id="price" name="price" type="text" value="{{price}}}" />
                    </p>
                {{#if add}}
                {{else }}
                    <p class="box-unpadded box-button-footer">
                        <button id="deleteProductDetail" class="danger">Delete</button>
                    </p>
                {{/if}}
                </div>

            </section>
        </section>
        <!-- footer region -->
        <section role="region" data-type="footer">
            <footer></footer>
        </section>
    </div>
{{/if}}