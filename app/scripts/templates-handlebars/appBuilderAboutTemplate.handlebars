{{#if loading}}
    <h1>Loading...</h1>
{{else}}
    <!-- represents application screen APP BUILDER NAME -->
    <div id="appBuilderAbout" role="window">
        <!-- title bar region -->
        <section role="region" data-type="header">
            <header>
                <button id="back"><span class="icon icon-back">back</span></button>
                <menu type="toolbar">
                <button id="aboutFormDone">Done</button>
                </menu>
                <h1>About Me</h1>
            </header>
        </section>

        <!-- content region -->
        <section role="region" data-type="content" class="box-padded-small">
            <div class="grey-box">
                <form id="aboutForm">
                    <p>
                        <label class="label-padded">Description</label>
                        <textarea rows="4" id="description">{{description}}</textarea>
                    </p>
                    <p>
                        <label class="label-padded">Address</label>
                        <input type="text" id="address" value="{{address}}">
                    </p>
                    <p>
                        <label class="label-padded">Phone Number</label>
                        <input type="text" id="phone" value="{{phone}}">
                    </p>
                    <p>
                        <label class="label-padded">Email</label>
                        <input type="text" id="email" value="{{email}}">
                    </p>
                </form>
            </div>
        </section>

        <!-- footer region -->
        <section role="region" data-type="footer">
            <footer></footer>
        </section>
    </div>
{{/if}}